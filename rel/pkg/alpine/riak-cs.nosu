#!/bin/bash

RUNNER_GEN_DIR={{platform_gen_dir}}
RELX_RIAK={{platform_bin_dir}}/riak-cs
export PID_DIR={{pid_dir}}

PID_FILE=$PID_DIR/riak-cs.pid

mkdir -p $PID_DIR

case "$1" in
    start)
        $RELX_RIAK $* -pa {{platform_patch_dir}}
        test -r $PID_FILE && exit 0
        ;;
    console|foreground)
        $RELX_RIAK $* -pa {{platform_patch_dir}}
        ;;
    stop)
        $RELX_RIAK $* \
            && rm -f $PID_FILE
        ;;
    *)
        $RELX_RIAK $*
        ;;
esac
