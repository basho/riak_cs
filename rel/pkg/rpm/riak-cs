#!/bin/sh

COMMAND={{platform_bin_dir}}/riak-cs

if [[ $EUID -ne 0 ]]; then
   echo "You need to be root or use sudo to run this command."
   exit 1
fi

case "$1" in
	start|console|foreground)
		su - riak-cs -c "PIPE_DIR=${PIPE_DIR} ${COMMAND} ${*} -pa {{platform_lib_dir}}/patches"
		;;
	*)
		su - riak-cs -c "PIPE_DIR=${PIPE_DIR} ${COMMAND} ${*}"
		;;
esac
